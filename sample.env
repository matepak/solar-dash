# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-auth-domain
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-storage-bucket
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# NASA API Key
REACT_APP_NASA_API_KEY=your-nasa-api-key

# API URLs
REACT_APP_KP_INDEX_URL=https://services.swpc.noaa.gov/products/noaa-planetary-k-index.json
REACT_APP_KP_FORECAST_URL=https://services.swpc.noaa.gov/products/noaa-planetary-k-index-forecast.json

# Feature Flags
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_SOLAR_IMAGES=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_DISABLE_REGISTRATION=false

# Backend Email Settings (Self-hosted)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Firebase Service Account (JSON string) for Backend Access
# You can generate this in Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT={"type": "service_account", ...}
